@model IEnumerable<Model.EF.Content>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layouts.cshtml";
}
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content d-md-flex justify-content-between align-items-center">
                <div class="mb-3 mb-md-0">
                    <h2>Tin tức</h2>
                    <p>Sự hài lòng của quý khách là niềm vui của chúng tôi!</p>
                </div>
                <div class="page_link">
                    <a href="/">Home</a>
                    <a href="/tin-tuc">Tin tức</a>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="smited"></div>
<div class="smited"></div>
<div class="content">
        
         @foreach (var item in Model) { 
             <div class="col-lg-4 col-md-4 col-sm-4">
                    <div class="blog__item">
                        <div class="blog__item__pic">
                            <img src="@item.Image" alt="" />
                        </div>
                        <div class="blog__item__text">
                            <ul>
                                <li><i class="fa fa-calendar-o"></i>@item.CreatedDate bời : @item.CreatedBy</li>
                            </ul>
                            <h5><a href="/tin-tuc/@item.MetaTitle-@item.ID">@item.Name </a></h5>
                            <p>
                                @item.Descriptions
                            </p>
                            <a href="/tin-tuc/@item.MetaTitle-@item.ID" class="blog__btn">Xem thêm <span class="arrow_right"></span></a>
                        </div>
                    </div>
                </div>
            }


