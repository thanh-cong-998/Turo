@model List<OnlineShop.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layouts.cshtml";
}

@section jsFooter{

    <script src="~/Assets/Client/js/controller/cartController.js"></script>
}

<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content d-md-flex justify-content-between align-items-center">
                <div class="mb-3 mb-md-0">
                    <h2>Giỏ hàng</h2>
                    <p>Sự hài lòng của quý khách là niềm vui của chúng tôi!</p>
                </div>
                <div class="page_link">
                    <a href="/">Home</a>
                </div>
            </div>
        </div>
    </div>
</section>


    <!-- Shoping Cart Section Begin -->
    <section class="shoping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__table">
                        @if (Model.Count > 0)
                        {
                            <table>
                                <thead>
                                    <tr>
                                        <td>Mã SP</td>
                                        <td>Tên SP</td>
                                        <td>Ảnh SP</td>
                                        <td>Số lượng</td>
                                        <td>Đơn giá</td>
                                        <td>Thành tiền</td>
                                        <td></td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Product.ID</td>
                                            <td>@item.Product.Name</td>
                                            <td><img src="@item.Product.Image" width="100" /></td>
                                            <td><input type="text" class="txtQuantity" data-id="@item.Product.ID" value="@item.Quantity" /></td>
                                            <td>@item.Product.Price.GetValueOrDefault(0).ToString("N0")đ</td>
                                            <td>@((item.Product.Price.GetValueOrDefault(0) * item.Quantity).ToString("N0"))đ</td>
                                            <td><a href="#" data-id="@item.Product.ID" class="btn-delete">Xoá</a></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                            <div class="row">
                                <div class="col-lg-6">
                                    
                                </div>

                                <div class="col-lg-6">
                                        @*<div class="shoping__checkout">
                                            <h5>Tổng tiền</h5>
                                            <ul>
                                                <li>Số lượng <span>@Model.Count</span></li>
                                            </ul>
                                        </div>*@
                                </div>
                            </div>

                            <div class="shoping__cart__btns">
                                <button id="btnContinue" class="primary-btn cart-btn">Tiếp tục mua hàng</button>
                                <button id="btnUpdate" class="primary-btn cart-btn ">
                                    Cập nhật giỏ hàng
                                </button>
                                <button id="btnDeleteAll" class="primary-btn cart-btn">Xoá giỏ hàng</button>
                                <button id="btnPayment" class="primary-btn cart-btn cart-btn-right">
                                    Thanh toán
                                </button>


                            </div>
                        }
                        else
                        {
                            <span class="alert alert-success">Chưa có sản phẩm nào trong giỏ hàng</span>
                        }
                    </div>
                </div>
            </div>
            
        </div>
    </section>
    <!-- Shoping Cart Section End -->