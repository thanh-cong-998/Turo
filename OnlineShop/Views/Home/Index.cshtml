
@{ ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_Layouts.cshtml";
                var slides = (List<Model.EF.Slide>)ViewBag.Slides;
                var listNewProducts = (List<Model.EF.Product>)ViewBag.NewProducts;
                var listFeatureProducts = (List<Model.EF.Product>)ViewBag.ListFeatureProducts; }

@section slide{
    <section>
        <div class="banner_inner d-flex align-items-center">
            <div class="container">
                <div class="banner_content row">
                    <div class="col-lg-4 category">
                        @{Html.RenderAction("ProductCategory", "Product");}
                    </div>
                    <div class="col-lg-8 backgroundUrl">
                        <br />
                        <h3 class="text-primary"><span class="text-white">Uy tín</span>  <br />Chất lượng <br /><span class="text-white">Giá rẻ</span></h3>
                        <h4 class="text-uppercase text-success">Hãy đến với TuroShop</h4>
                        <a class="main_btn mt-40" href="/san-pham">Mua ngay</a><br /><br /><br /><br />
                    </div>
                </div>
            </div>
        </div>
    </section>
    <style>
        .backgroundUrl {
            background: url("../../Assets/Client/Product/banner1.jpg");
        }
        .category{
            padding-left:10px;
        }
    </style>

}

